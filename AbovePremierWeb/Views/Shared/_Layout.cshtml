<!DOCTYPE html>
<html lang="es">
<title>AbovePremiere - @ViewData["Title"]</title>

<meta name="author" content="Micaela B. Gonzalez" />
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="icon" href="~/img/favicon.ico" type="image/gif" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<!--Bootsrap 4 CDN-->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<!--Fontawesome CDN-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/site.css" />

<body>

    <!-- Navbar (sit on top) -->
    <div class="w3-top">
        <div class="w3-bar w3-white w3-card" id="myNavbar">
            <a class="w3-bar-item w3-button w3-wide" asp-controller="Home" asp-action="Index">
                <img src="~/img/Logo A.png" width="50" height="50" alt="Logo">
                Above Premiere
            </a>
            <!-- Right-sided navbar links -->

            @{String aux = ViewBag.Title;
                @if (aux == "Download")
                {
                    <div class="w3-right w3-hide-small">
                        
                        <a asp-controller="Home" asp-action="LogOut" class="w3-bar-item w3-button"><i class="fa fa-th"></i> Log out</a>
                    </div>
                }
                else
                {

                    <div class="w3-right w3-hide-small">


                        <a asp-controller="Home" asp-action="Index" class="w3-bar-item w3-button"><i class="fa fa-th"></i> Home</a>
                        <a asp-controller="Home" asp-action="Login" class="w3-bar-item w3-button"><i class="fa fa-user"></i> Login</a>
                        <a asp-controller="Home" asp-action="Registro" class="w3-bar-item w3-button"><i class="fa fa-user-plus"></i> Registrarse</a>
                        <a asp-controller="Home" asp-action="Index" asp-fragment=contact class="w3-bar-item w3-button"><i class="fa fa-envelope"></i> Contacto</a>

                    </div>

                }
            }
            <!-- Hide right-floated links on small screens and replace them with a menu icon -->

            <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium" onclick="w3_open()">
                <i class="fa fa-bars"></i>
            </a>
        </div>
    </div>

    @RenderBody()


    <!-- Footer -->
    <footer class="w3-center w3-pink w3-padding-64">
        <a href="#home" class="w3-button w3-light-grey"><i class="fa fa-arrow-up w3-margin-right"></i>Volver arriba</a>
        <div class="w3-xlarge w3-section">
            <a href="https://www.facebook.com/homerrito01/" style='color: white' target="_blank"><i class="fa fa-facebook-official w3-hover-opacity"></i></a>
            <a href="https://www.instagram.com/homero_minpin/" style='color: white' target="_blank"><i class="fa fa-instagram w3-hover-opacity"></i></a>
            <i class="fa fa-pinterest-p w3-hover-opacity" ></i>
            <a href="https://twitter.com/tumemediario?lang=es" style='color: white' target="_blank"><i class="fa fa-twitter w3-hover-opacity"></i></a>
            <a href="https://www.linkedin.com/in/micgonzalezsuarez/" style='color: white' target="_blank"><i class="fa fa-linkedin w3-hover-opacity"></i></a>
</div>
        <p>&copy;Copyright 2020 Above Premier</p>
    </footer>

    <script>
        // Image Gallery
        function onClick(element) {
            document.getElementById("img01").src = element.src;
            document.getElementById("modal01").style.display = "block";
            var captionText = document.getElementById("caption");
            captionText.innerHTML = element.alt;
        }

    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>