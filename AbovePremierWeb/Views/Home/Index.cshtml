@{
    ViewData["Title"] = "Inicio";
}
    
    <header class="bgimg-1 w3-display-container w3-grayscale-min" id="home">
        @if (ViewBag.msg != null)
        {
            <div class="w3-text-white w3-center">
                <p><strong>@ViewBag.msg</strong></p>
            </div>
        }

        <div class="w3-display-left w3-text-white" style="padding:48px">
            <span class="w3-jumbo">¡Bienvenido a nuestra Web!</span><br>
            <span class="w3-large">Aprendé un poco más sobre nuestro producto.</span><br>
            <span class="w3-large">Si ya lo adquiriste bienvenido nuestra comunidad ♥ Si no, ¡apurate a conseguirlo!</span>
        </div>
    </header>

    <!-- Sobre el Producto -->
    <div class="w3-container" style="padding:128px 16px" id="about">
        <h3 class="w3-center">Sobre nuestro producto</h3>
        <div class="w3-row-padding w3-center" style="margin-top:64px">
            <div class="w3-third">
                <i class="fa fa-desktop w3-margin-bottom w3-jumbo w3-center"></i>
                <p class="w3-large">Multiplatafoma</p>
                <p>¡Es apto para cualquier Sistema Operativo! </p>
            </div>
            <div class="w3-third">
                <i class="fa fa-heart w3-margin-bottom w3-jumbo"></i>
                <p class="w3-large">Soporte Técnico</p>
                <p>
                    Contamos con un mail de consultas para responder a cualquier
                    problema que nuestros usuarios puedan tener.
                </p>
            </div>
            <div class="w3-third">
                <i class="fa fa-diamond w3-margin-bottom w3-jumbo"></i>
                <p class="w3-large">Diseño</p>
                <p>Diseño simple y claro para los usuarios.</p>
            </div>
        </div>
    </div>

    <!-- Capturas -->
    <div class="w3-container" style="padding:128px 16px" id="work">
        <h3 class="w3-center">Capturas del Programa</h3>

        <div class="w3-row-padding" style="margin-top:64px">
            <div class="w3-col l4 m12">
                <img src="~/img/cap1.png" href="cap3.png"  style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Inicio de sesión">
            </div>
            <div class="w3-col l4 m12">
                <img src="~/img/cap2.png" href="ap3.png" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Conversor">
            </div>
            <div class="w3-col l4 m12">
                <img src="~/img/cap3.png" href="cap3.png" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Conversión completa">
            </div>
        </div>
    </div>

    <!-- Contacto -->
    <div class="w3-container w3-light-grey" style="padding:128px 16px" id="contact">
        <h3 class="w3-center">Contacto</h3>
        <p class="w3-center w3-large">Para consultas comunicate con nosotros</p>
        <div style="margin-top:48px">

            <br>
            <form action="#" target="_blank">
                <p><input class="w3-input w3-border" type="text" placeholder="Pepito" required name="Nombre"></p>
                <p><input class="w3-input w3-border" type="text" placeholder="pepito@gmail.com" required name="Mail"></p>
                <p><input class="w3-input w3-border" type="text" placeholder="Escriba su mensaje aquí..." required name="Message"></p>
                <p>
                    <button class="w3-button w3-pink" type="submit">
                        <i class="fa fa-paper-plane"></i> Enviar
                    </button>
                </p>
            </form>
            <p><i class="fa fa-envelope fa-fw w3-large w3-margin-right w3-pink"> </i>consultas@abovepremiere.com</p>
        </div>
    </div>
