@{
    ViewData["Title"] = "Login";
}

    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Login</h3>
                   
                    @if (ViewBag.msg != null)
                    {
                        <div class="w3-text-white w3-center">
                            <p><strong>@ViewBag.msg</strong></p>
                        </div>
                    }

                </div>
                <div class="card-body">
                    <form asp-action="LoginAct" asp-controller="Home" method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" name="mail" class="form-control" placeholder="mail@above.com">

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" name="pass" class="form-control" placeholder="********">
                        </div>
                        <div class="row align-items-center remember">
                            <input type="checkbox">Recordarme
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Ingresar" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        ¿Todavía no tenes cuenta? Registrate acá <a asp-controller="Home" asp-action="Registro"> Resgistro</a>
                    </div>
                </div>
            </div>
        </div>
    </div>